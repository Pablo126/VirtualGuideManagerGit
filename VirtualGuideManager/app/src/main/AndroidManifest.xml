<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apps.jpablo.virtualguidemanager">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:configChanges="orientation|screenSize"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Administrator.Main"
            android:label="@string/title_activity_main_adm" />
        <activity
            android:name=".Visitors.Main"
            android:label="@string/title_activity_main_vis" />
        <activity
            android:name=".Administrator.New_project"
            android:label="@string/title_activity_new_project" />
        <activity
            android:name=".Administrator.Modify_project"
            android:label="@string/title_activity_modify_project" />
        <activity
            android:name=".Administrator.Main_users"
            android:label="@string/title_activity_main_users" />
        <activity
            android:name=".Administrator.New_user"
            android:label="@string/title_activity_new_user" />
        <activity
            android:name=".Administrator.Modify_user"
            android:label="@string/title_activity_modify_user" />
        <activity
            android:name=".Administrator.Main_infopoints"
            android:label="@string/title_activity_main_infopoints" />
        <activity
            android:name=".Administrator.New_point"
            android:label="@string/title_activity_new_point" />
        <activity
            android:name=".Administrator.Modify_point"
            android:label="@string/title_activity_modify_point" />
        <activity
            android:name=".Visitors.Project_selected"
            android:label="@string/title_activity_project_selected"
            android:screenOrientation="sensorLandscape"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" />
        <activity
            android:name=".Visitors.Show_file"
            android:screenOrientation="sensorLandscape"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
            android:label=""/>
    </application>

</manifest>
