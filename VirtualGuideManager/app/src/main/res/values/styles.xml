<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="ButtonA">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
    </style>

    <style name="ListviewA">
        <item name="android:background">@drawable/listview_selector</item>
    </style>

    <style name="FloatingActionButton" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/fab_background</item>
        <item name="android:stateListAnimator">@anim/abc_fade_in</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="FloatingActionButtonUpdate" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/fab_background_red</item>
        <item name="android:stateListAnimator">@anim/abc_fade_in</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="FloatingActionButtonDelete" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/fab_background_blue</item>
        <item name="android:stateListAnimator">@anim/abc_fade_in</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="Title">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/accent_material_light</item>
    </style>

</resources>
