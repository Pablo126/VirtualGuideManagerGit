<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps.jpablo.virtualguidemanager.Administrator.Main_users">
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        style="@style/ListviewA"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:choiceMode="singleChoice"
        android:drawSelectorOnTop="false"
        android:longClickable="true" />

    <ImageButton
        android:id="@+id/fab_newuser"
        style="@style/FloatingActionButton"
        android:src="@drawable/plus"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:contentDescription="@null"
        android:onClick="newUser"/>
    <ImageButton
        android:id="@+id/fab_modifyuser"
        style="@style/FloatingActionButtonDelete"
        android:src="@drawable/pen"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:visibility="invisible"
        android:contentDescription="@null"
        android:onClick="modifyUser"/>
    <ImageButton
        android:id="@+id/fab_deleteuser"
        style="@style/FloatingActionButtonUpdate"
        android:src="@drawable/delete"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:visibility="invisible"
        android:layout_marginRight="72dp"

        android:contentDescription="@null"
        android:onClick="dialogDeleteUser"/>
</RelativeLayout>
